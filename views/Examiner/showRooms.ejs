<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Classrooms</title>
    <link
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
        rel="stylesheet"
    >
</head>
<body>
    <div class="container mt-5">
        <h1>All Classrooms</h1>
        <table class="table table-bordered mt-4">
            <thead>
                <tr>
                    <th>Classroom Name</th>
                    <th>Room ID</th>
                </tr>
            </thead>
            <tbody>
                <% if (rooms.length > 0) { %>
                    <% rooms.forEach(room => { %>
                        <tr>
                            <td><%= room.roomName %></td>
                            <td><%= room.roomId %></td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="2" class="text-center">No classrooms created yet.</td>
                    </tr>
                <% } %>
            </tbody>
        </table>

        <!-- New User Submissions Section -->
        <h2>User Submissions</h2>
        <table class="table table-bordered mt-4">
            <thead>
                <tr>
                    <th>Roll Number</th>
                    <th>Room ID</th>
                    <th>Photo</th>
                </tr>
            </thead>
            <tbody>
                <% if (userSubmissions.length > 0) { %>
                    <% userSubmissions.forEach(submission => { %>
                        <tr>
                            <td><%= submission.rollNo %></td>
                            <td><%= submission.roomId %></td>
                            <td><img src="<%= submission.photoPath %>" alt="Photo" width="100"></td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="3" class="text-center">No submissions yet.</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</body>
</html>
